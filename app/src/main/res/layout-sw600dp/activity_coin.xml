<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/map1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapbox_myLocation="true"/>

    <ImageView
        android:id="@+id/iv_go_dashboard"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:background="@mipmap/ico_category"/>

    <ImageView
        android:id="@+id/iv_cu_wallet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:background="@mipmap/ico_wallet_black"/>

    <TextView
        android:id="@+id/tv_count_wallet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="33"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:background="@drawable/rect_count_wallet"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/myLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:src="@android:drawable/ic_menu_mylocation"
        android:visibility="gone"
        app:backgroundTint="@color/White"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal"
        app:pressedTranslationZ="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="200dp"
        android:background="@mipmap/coin_bottom">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="A Section for Tips &amp; Tricks"
            android:textColor="@color/White"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:text="This section will randomly rotate different helpful hints for the player"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="25dp"/>
    </RelativeLayout>
</FrameLayout>