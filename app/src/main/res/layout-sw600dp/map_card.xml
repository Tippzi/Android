<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@android:color/transparent"
    android:layout_marginTop="147dp"
    android:elevation="4dp"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/rect_mapview1">
        <ImageView
            android:id="@+id/iv_ticket_google_map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/ico_ticket_active"/>

        <TextView
            android:id="@+id/tv_deal_title_google_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_ticket_google_map"
            android:text="Free entry before 11pm"
            android:textColor="@color/HintBackground"
            android:textStyle="bold"
            android:textSize="@dimen/edit_text_sw600"/>

        <TextView
            android:id="@+id/tv_deal_description_google_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_ticket_google_map"
            android:layout_below="@+id/tv_deal_title_google_map"
            android:text="Lorem ipsum deolor dkoame aoke aoek die aode dkdo"
            android:textColor="@color/Dark"
            android:textSize="22sp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>