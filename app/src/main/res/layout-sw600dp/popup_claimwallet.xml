<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:background="@drawable/rect_popup">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Deals must be claimed at the venue and may only be used once. Ready to claim? Tap yes to enjoy your deal!"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="@dimen/edit_text_sw600"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/btn_yes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_sw6000"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:gravity="center|center_vertical"
                android:background="@drawable/rect_button_active"
                android:text="YES"
                android:textStyle="bold"
                android:textColor="@drawable/btn_selector"
                android:textSize="@dimen/edit_text_sw600"/>

            <TextView
                android:id="@+id/btn_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_sw6000"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center|center_vertical"
                android:background="@drawable/rect_button_active"
                android:text="NO"
                android:textStyle="bold"
                android:textColor="@drawable/btn_selector"
                android:textSize="@dimen/edit_text_sw600"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>