<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:padding="30dp"
    android:paddingRight="70dp"
    android:paddingLeft="70dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.application.tippzi.Activities.SplashScreen">

    <TextView
        android:id="@+id/tv_title_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Wallet"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="@dimen/button_text_sw720"/>

    <ImageView
        android:id="@+id/iv_close_wallet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/ico_close_hint"/>

    <TextView
        android:id="@+id/tv_my_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="My deals(3)"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="@dimen/button_text_sw720"/>

    <ListView
        android:id="@+id/lv_wallet_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:dividerHeight="10dp"
        android:layout_below="@+id/tv_my_wallet">

    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="Use your wallet to access your deals quickly. Remember, deals must always be claimed at the venue"
        android:textColor="@color/Hint"
        android:textStyle="bold"
        android:textSize="@dimen/s_comment_text_sw720"
        android:id="@+id/textView" />

</RelativeLayout>
