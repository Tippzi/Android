<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/HintBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/rect_upload_photo">
        <TextView
            android:id="@+id/tv_deal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Free entry before 11pm"
            android:textSize="@dimen/button_text_sw720"
            android:textColor="@color/HintBackground"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_deal_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Lorem ipsum dolor sit amet..."
            android:textSize="@dimen/comment_text_sw720"
            android:textColor="@color/Dark"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/dotted_black"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_locate"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:background="@mipmap/ico_location"/>

                <TextView
                    android:id="@+id/tv_bar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_locate"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="The Hoxton Pony"
                    android:textSize="@dimen/edit_text_sw720"
                    android:textColor="@color/HintBackground"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bar_name"
                    android:layout_toRightOf="@+id/iv_locate"
                    android:layout_marginLeft="15dp"
                    android:text="3 remaining Exp 22 Oct"
                    android:textSize="@dimen/s_comment_text_sw720"
                    android:textColor="@color/YellowPink"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.5">
                <TextView
                    android:id="@+id/btn_edit_deal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_sw720"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/ed_password_sign_in"
                    android:gravity="center|center_vertical"
                    android:background="@drawable/rect_button"
                    android:text="View This Deal"
                    android:textStyle="bold"
                    android:textColor="@drawable/btn_selector"
                    android:textSize="@dimen/edit_text_sw720"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_remove_wallet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:background="@mipmap/ico_remove_wallet"
        android:layout_alignParentRight="true"/>

</RelativeLayout>