<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HintBackground"
    tools:context="com.application.tippzi.Activities.SplashScreen">

    <ImageView
        android:id="@+id/iv_back_sign_up"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/ico_back"/>

    <TextView
        android:id="@+id/tv_title_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Create an Account"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="@dimen/group_text_sw720"/>

    <ImageView
        android:id="@+id/btn_twitter_create_account_customer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tv_title_create_account"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ico_twitter"/>

    <ImageView
        android:id="@+id/btn_facebook_create_account_customer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/tv_title_create_account"
        android:layout_toLeftOf="@+id/btn_twitter_create_account_customer"
        android:background="@mipmap/ico_facebook"/>

    <ImageView
        android:id="@+id/btn_google_create_account_customer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/tv_title_create_account"
        android:layout_toRightOf="@+id/btn_twitter_create_account_customer"
        android:background="@mipmap/ico_google"/>

    <TextView
        android:id="@+id/tv_comment_old_fashion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_twitter_create_account_customer"
        android:text="or sign up the old-fashioned way"
        android:textColor="@color/Dark"
        android:textStyle="bold"
        android:textSize="@dimen/comment_text_sw720"/>

    <TextView
        android:id="@+id/btn_customer_sign_up"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="@dimen/button_height_sw720"
        android:layout_below="@+id/tv_comment_old_fashion"
        android:gravity="center|center_vertical"
        android:background="@drawable/rect_button"
        android:text="Sign up manually"
        android:textStyle="bold"
        android:textColor="@drawable/btn_selector"
        android:textSize="@dimen/button_text_sw720"/>

    <TextView
        android:id="@+id/btn_business_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="I'm a business user"
        android:textColor="@color/Dark"
        android:textStyle="bold"
        android:textSize="@dimen/comment_text_sw720"/>

    <LinearLayout
        android:id="@+id/lay_term_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_term_condition_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Please click here for our terms and conditions and our terms of use"
            android:textColor="@color/White"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
