<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/rect_popup">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="3.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1.5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Post to Twitter"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/comment_text"
                    android:textStyle="bold"
                    android:textColor="@color/White"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/btn_twitter_post"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center|center_vertical"
                    android:background="@drawable/rect_button_active"
                    android:text="Post"
                    android:textColor="@drawable/btn_selector"
                    android:textSize="@dimen/activity_horizontal_margin"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">
            <EditText
                android:id="@+id/edit_comment_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:gravity="top"
                android:textColor="@color/Dark"
                android:background="@drawable/rect_edittext_active"
                android:inputType="textMultiLine"
                android:text="dddd"
                android:textSize="@dimen/edit_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/iv_shareimage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/ic_launcher"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>