<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/rect_button_active">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Share your Deal!"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="@dimen/button_text"/>

        <TextView
            android:id="@+id/deal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Spread the love and share this deal with  a friend"
            android:textSize="@dimen/edit_text"
            android:textColor="@color/White"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_facebook_sign_in"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/ico_facebook"/>

            <ImageView
                android:id="@+id/btn_twitter_sign_in"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ico_twitter"/>

            <ImageView
                android:id="@+id/btn_google_sign_in"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ico_google"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>