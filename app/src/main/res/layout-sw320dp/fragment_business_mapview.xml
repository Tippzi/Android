<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_bottom_select"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="170dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_mapview4"
            android:gravity="bottom|center_horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_remain_google_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="3 remaining Exp 22 Oct"
                android:textColor="@color/YellowPink"
                android:textSize="@dimen/comment_text"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_mapview5"
            android:layout_weight="1.2">

            <com.application.tippzi.Service.RoundedImageView
                android:id="@+id/iv_profile_image_slider"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/ico_app_logo"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_profile_image_slider"
                android:text="The Pony"
                android:textColor="@color/HintBackground"
                android:textStyle="bold"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/tv_bar_music_google_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_profile_image_slider"
                android:layout_below="@+id/bar_title"
                android:text="Dance - Garage - Live DJ"
                android:textColor="@color/Dark"
                android:textSize="@dimen/comment_text"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="107dp"
        android:background="@drawable/rect_mapview3">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rect_mapview2">

    </LinearLayout>


    <com.application.tippzi.swipeview.SwipeAdapterView
        android:id="@+id/container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="15.5">

    </com.application.tippzi.swipeview.SwipeAdapterView>
</RelativeLayout>