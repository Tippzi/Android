<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.application.tippzi.Activities.SplashScreen">

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/HintBackground"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title_my_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:text="My Account"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        android:textSize="@dimen/button_text"/>

                    <TextView
                        android:id="@+id/tv_business_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title_my_account"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:text="The Hoxton Pony"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        android:textSize="@dimen/business_name"/>

                    <ImageView
                        android:id="@+id/iv_switch_map"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/ico_map_view"/>

                    <TextView
                        android:id="@+id/tv_account_statistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_business_name"
                        android:text="Account Statistics : Overview"
                        android:textColor="@color/Dark"
                        android:textStyle="bold"
                        android:textSize="@dimen/comment_text"/>

                    <TextView
                        android:id="@+id/tv_in_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_account_statistics"
                        android:text="0"
                        android:textColor="@color/in_Dark"
                        android:textStyle="bold"
                        android:textSize="@dimen/count_text"/>

                    <TextView
                        android:id="@+id/tv_impressions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_account_statistics"
                        android:layout_toLeftOf="@+id/tv_in_wallet"
                        android:text="0"
                        android:textColor="@color/in_Dark"
                        android:textStyle="bold"
                        android:textSize="@dimen/count_text"/>

                    <TextView
                        android:id="@+id/tv_claimed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_account_statistics"
                        android:layout_toRightOf="@+id/tv_in_wallet"
                        android:text="0"
                        android:textColor="@color/in_Dark"
                        android:textStyle="bold"
                        android:textSize="@dimen/count_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_in_wallet"
                        android:text="engagements"
                        android:textColor="@color/Dark"
                        android:textStyle="bold"
                        android:textSize="@dimen/comment_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:layout_toLeftOf="@+id/tv_in_wallet"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_in_wallet"
                        android:text="impressions"
                        android:textColor="@color/Dark"
                        android:textStyle="bold"
                        android:textSize="@dimen/comment_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_toRightOf="@+id/tv_in_wallet"
                        android:layout_below="@+id/tv_in_wallet"
                        android:text="clicks"
                        android:textColor="@color/Dark"
                        android:textStyle="bold"
                        android:textSize="@dimen/comment_text"/>

                    <LinearLayout
                        android:id="@+id/lay_circle_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_in_wallet"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical"
                        android:scaleX="2"
                        android:background="@drawable/circle_shape_small">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_your_deals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_in_wallet"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="90dp"
                        android:text="Your deals"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        android:textSize="@dimen/button_text"/>
                    <LinearLayout
                        android:id="@+id/lay_listivew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_your_deals"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <ListView
                            android:id="@+id/lv_business_deals"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:dividerHeight="10dp"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/lay_add_deal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/group_height"
                        android:layout_below="@+id/lay_listivew"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/rect_edittext_inactive">

                        <TextView
                            android:id="@+id/tv_add_business"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add a deal"
                            android:layout_marginLeft="30dp"
                            android:textColor="@color/Pink"
                            android:textStyle="bold"
                            android:textSize="@dimen/group_text"/>

                        <ImageView
                            android:id="@+id/plus_add_business"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/ico_add_deal"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_comment_add_deal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/lay_add_deal"
                        android:text="It's gettting pretty lonely in here... Add a deal to get started"
                        android:textColor="@color/YellowPink"
                        android:textStyle="bold"
                        android:textSize="@dimen/comment_text"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:layout_below="@+id/tv_comment_add_deal"
                        android:background="@color/White">

                        <TextView
                            android:id="@+id/tv_percent_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:text="Your profile is 25% complete"
                            android:textColor="@color/Pink"
                            android:textStyle="bold"
                            android:textSize="@dimen/comment_text"/>

                        <TextView
                            android:id="@+id/tv_comment_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_below="@+id/tv_percent_profile"
                            android:layout_centerHorizontal="true"
                            android:text="Businesses with complete profiles receive more views"
                            android:textColor="@color/Dark"
                            android:textStyle="bold"
                            android:textSize="@dimen/s_comment_text"/>

                        <ProgressBar
                            android:id="@+id/prg_percent_profile"
                            style="@style/CustomProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginTop="25dp"
                            android:layout_below="@+id/tv_percent_profile"
                            android:max="100"
                            android:progress="5"
                            android:secondaryProgress="25"/>

                        <TextView
                            android:id="@+id/tv_business_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/prg_percent_profile"
                            android:text="Your business profile"
                            android:textColor="@color/in_Dark"
                            android:textStyle="bold"
                            android:textSize="@dimen/button_text"/>

                        <ImageView
                            android:id="@+id/iv_edit_profile"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/prg_percent_profile"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/ico_edit_profile"/>

                        <LinearLayout
                            android:id="@+id/lay_view_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_edit_profile"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/chc_business_name"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@mipmap/ico_check"/>

                                <TextView
                                    android:id="@+id/tv_business_name_dashboard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:hint="Business Name"
                                    android:textColor="@color/in_Dark"
                                    android:textColorHint="@color/Dark"
                                    android:textSize="@dimen/comment_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/chc_business_category"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@mipmap/ico_check"/>

                                <TextView
                                    android:id="@+id/tv_business_category_dashboard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:hint="Business Category"
                                    android:textColor="@color/in_Dark"
                                    android:textColorHint="@color/Dark"
                                    android:textSize="@dimen/comment_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/chc_business_address"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@mipmap/ico_check"/>

                                <TextView
                                    android:id="@+id/tv_business_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:hint="Business Address"
                                    android:textColor="@color/in_Dark"
                                    android:textColorHint="@color/Dark"
                                    android:textSize="@dimen/comment_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/chc_business_telephone"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@mipmap/ico_minus"/>

                                <TextView
                                    android:id="@+id/tv_business_telephone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:hint="Telephone number"
                                    android:textColor="@color/in_Dark"
                                    android:textColorHint="@color/Dark"
                                    android:textSize="@dimen/comment_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/chc_business_email"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@mipmap/ico_minus"/>

                                <TextView
                                    android:id="@+id/tv_business_email"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:hint="Email address"
                                    android:textColor="@color/in_Dark"
                                    android:textColorHint="@color/Dark"
                                    android:textSize="@dimen/comment_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@color/Dark">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/chc_business_description"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@mipmap/ico_minus"/>

                                <TextView
                                    android:id="@+id/tv_business_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:hint="Brief description"
                                    android:textColor="@color/in_Dark"
                                    android:textColorHint="@color/Dark"
                                    android:textSize="@dimen/comment_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/chc_business_music_type"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@mipmap/ico_minus"/>

                                <TextView
                                    android:id="@+id/tv_business_music_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:hint="Type of music played"
                                    android:textColor="@color/in_Dark"
                                    android:textColorHint="@color/Dark"
                                    android:textSize="@dimen/comment_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@color/Dark">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/chc_business_open_hours"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@mipmap/ico_minus"/>

                                <TextView
                                    android:id="@+id/tv_opening_hour"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:hint="Opening hours"
                                    android:lineSpacingExtra="10dp"
                                    android:textColor="@color/in_Dark"
                                    android:textColorHint="@color/Dark"
                                    android:textSize="@dimen/comment_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@color/Dark">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/chc_business_image_galley"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@mipmap/ico_minus"/>

                                <TextView
                                    android:id="@+id/tv_gallery_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:hint="Image galley"
                                    android:textColor="@color/in_Dark"
                                    android:textColorHint="@color/Dark"
                                    android:textSize="@dimen/comment_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/lay_gallery1_dash"
                                    android:layout_width="80dp"
                                    android:layout_height="70dp"
                                    android:layout_marginRight="10dp"
                                    android:visibility="gone"
                                    android:padding="5dp"
                                    android:background="@drawable/rect_gallery_dash">

                                    <ImageView
                                        android:id="@+id/iv_gallery1_dash"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lay_gallery2_dash"
                                    android:layout_width="80dp"
                                    android:layout_height="70dp"
                                    android:layout_marginRight="10dp"
                                    android:visibility="gone"
                                    android:padding="5dp"
                                    android:background="@drawable/rect_gallery_dash">

                                    <ImageView
                                        android:id="@+id/iv_gallery2_dash"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lay_gallery3_dash"
                                    android:layout_width="80dp"
                                    android:layout_height="70dp"
                                    android:visibility="gone"
                                    android:padding="5dp"
                                    android:background="@drawable/rect_gallery_dash">

                                    <ImageView
                                        android:id="@+id/iv_gallery3_dash"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/lay_gallery4_dash"
                                    android:layout_width="80dp"
                                    android:layout_height="70dp"
                                    android:layout_marginRight="10dp"
                                    android:visibility="gone"
                                    android:padding="5dp"
                                    android:background="@drawable/rect_gallery_dash">

                                    <ImageView
                                        android:id="@+id/iv_gallery4_dash"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lay_gallery5_dash"
                                    android:layout_width="80dp"
                                    android:layout_height="70dp"
                                    android:layout_marginRight="10dp"
                                    android:visibility="gone"
                                    android:padding="5dp"
                                    android:background="@drawable/rect_gallery_dash">

                                    <ImageView
                                        android:id="@+id/iv_gallery5_dash"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lay_gallery6_dash"
                                    android:layout_width="80dp"
                                    android:layout_height="70dp"
                                    android:visibility="gone"
                                    android:padding="5dp"
                                    android:background="@drawable/rect_gallery_dash">

                                    <ImageView
                                        android:id="@+id/iv_gallery6_dash"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/btn_edit_profile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="20dp"
                            android:layout_below="@+id/lay_view_profile"
                            android:gravity="center|center_vertical"
                            android:background="@drawable/rect_button_active"
                            android:text="Edit my profile"
                            android:textStyle="bold"
                            android:textColor="@drawable/btn_selector"
                            android:textSize="@dimen/button_text"/>

                        <LinearLayout
                            android:id="@+id/btn_logout_business"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/btn_edit_profile"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="30dp"
                                android:background="@mipmap/ico_sign_out"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Sign out"
                                android:textColor="@color/HintBackground"
                                android:textStyle="bold"
                                android:textSize="@dimen/button_text"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
