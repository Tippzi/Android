<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context="com.application.tippzi.Activities.SplashScreen">
        <LinearLayout
            android:id="@+id/lay_background"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@mipmap/ima_pattern"
            android:layout_below="@+id/tv_count_page">
                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    app:rollviewpager_play_delay="4000"
                    android:overScrollMode="never" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:text="Business Description"
            android:textSize="@dimen/button_text_sw480"
            android:textStyle="bold"
            android:textColor="@color/BoldHint" />

        <TextView
            android:id="@+id/tv_business_description_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:textSize="@dimen/comment_text_sw480"
            android:textColor="@color/HintWalet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:text="Opening Hours"
            android:textSize="@dimen/button_text_sw480"
            android:textStyle="bold"
            android:textColor="@color/BoldHint" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monday"
                            android:textSize="@dimen/comment_text_sw480"
                            android:textColor="@color/HintWalet"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_horizontal"
                    android:layout_marginRight="35dp"
                    android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_mon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6pm-2am"
                            android:textSize="@dimen/comment_text_sw480"
                            android:textColor="@color/BoldHint"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tuesday"
                            android:textSize="@dimen/comment_text_sw480"
                            android:textColor="@color/HintWalet"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_horizontal"
                    android:layout_marginRight="35dp"
                    android:layout_weight="1">
